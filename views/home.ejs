<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Instagram Profile</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      background-color: #fafafa;
      color: #262626;
      transition: background-color 0.3s ease, color 0.3s ease;
    }

    .container {
      max-width: 950px;
      margin: auto;
      padding: 30px 20px;
    }

    /* Header Profile Info */
    .header {
      display: flex;
      align-items: center;
      gap: 40px;
      margin-bottom: 30px;
      flex-wrap: wrap;
    }

    .profile-pic {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      object-fit: cover;
      border: 4px solid transparent;
      background-image: linear-gradient(to top right, orange, deeppink);
      padding: 2px;
    }

    .profile-info h1 {
      font-size: 26px;
      font-weight: 600;
      margin-bottom: 10px;
    }

    .stats {
      font-size: 16px;
      color: #555;
      margin-top: 10px;
    }

    /* Posts grid */
    .posts {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 20px;
    }

    .post {
      overflow: hidden;
      border-radius: 10px;
      background-color: #fff;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .post img {
      width: 100%;
      height: auto;
      display: block;
    }

    .post p {
      padding: 10px;
      font-size: 15px;
      color: #444;
    }

    .post:hover {
      transform: scale(1.01);
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    /* Dark Mode */
    .dark-mode {
      background-color: #121212;
      color: #e0e0e0;
    }

    .dark-mode .stats {
      color: #aaa;
    }

    .dark-mode .post {
      background-color: #1e1e1e;
    }

    .dark-mode .post p {
      color: #ccc;
    }

    .dark-mode .profile-pic {
      border: 4px solid #444;
      background-image: none;
    }

    /* Toggle Button */
    #toggleDark {
      position: fixed;
      top: 20px;
      right: 20px;
      padding: 10px 18px;
      background-color: #262626;
      color: #fafafa;
      border: none;
      border-radius: 30px;
      cursor: pointer;
      font-size: 14px;
      font-weight: 600;
      transition: background-color 0.3s ease;
      z-index: 1000;
    }

    #toggleDark:hover {
      background-color: #444;
    }

    /* Mobile responsive */
    @media (max-width: 700px) {
      .header {
        flex-direction: column;
        align-items: center;
        text-align: center;
      }

      .profile-pic {
        width: 120px;
        height: 120px;
      }

      .profile-info h1 {
        font-size: 22px;
      }
    }
  </style>
</head>
<body>
  <button id="toggleDark">üåô Toggle Dark Mode</button>

  <div class="container">
    <div class="header">
      <img src="<%= data.profilePic %>" alt="Profile Picture" class="profile-pic">
      <div class="profile-info">
        <h1>@<%= data.name %></h1>
        <p class="stats">
          Followers: <%= data.followers %> &nbsp;&nbsp;&nbsp;
          Following: <%= data.following %>
        </p>
      </div>
    </div>

    <div class="posts">
      <% for (let post of data.posts) { %>
        <div class="post">
          <img src="<%= post.image %>" alt="Post Image">
          <p>‚ù§Ô∏è <%= post.likes %> &nbsp;&nbsp;&nbsp; üí¨ <%= post.comments %></p>
        </div>
      <% } %>
    </div>
  </div>

  <script>
    const btn = document.getElementById('toggleDark');
    btn.addEventListener('click', () => {
      document.body.classList.toggle('dark-mode');
    });
  </script>
</body>
</html>
